.leaderboard-container{
   display:flex;
   align-items:center;
   flex-direction:column;
}
.table-container{
   display:flex;
   justify-content: space-around;
}
.table-container span{
   margin-bottom:10px;
}

.timeSelector-filter {
	width:30rem;
	min-width:30rem;
    color: white;
    padding: 0 1rem;
  }
 
 select{
	 text-align-last:left;
	 height:0.7rem;
 }
  .timeSelector-filter__control {
	margin-top:2rem;
	margin-bottom:2rem;
	padding:0.5rem;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
	text-align:enter;
  }
  
  .timeSelector-filter label {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  .timeSelector-filter select {
    font: inherit;
    padding: 0.5rem 3rem;
    font-weight: bold;
    border-radius: 6px;
	text-align:center;
	color:white;
	background-color:#363636cc;
	width:2rem;
	height:3rem;
  }
 .table-container-inside
 {
	 min-width:30rem;
	 width:30rem;
	 height:25rem;
	 min-height:25rem;

	 
 }
 .leaderboard-container h3
 {
	 min-width:68rem;
	 width:68rem;
     margin-top:3rem;
 }


@media all and (max-width :80rem){
   .table-container{
      flex-direction : column;
   }
   .personal
   {
      margin-top : 5%;
   }
   .goat
   {
      margin-top : 2%;
   }
   .timeSelector-filter
   {
	   min-width:40vw;
	   width:40vw;
   }
   .table-container-inside
   {
	   min-width:40vw;
       width:40vw;
   }
.leaderboard-container h3
{
 min-width:40vw;
       width:40vw;
}

}
@media all and (min-width :80rem){

   .table-container-inside
   {
	 margin-left:6rem;
	 transform:translateX(-4rem)
   }
	

}